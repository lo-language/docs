/*
 * usage: main.lo <side length>
 */

using Square;
using Lo::String;

main is (string* args, dyn system) {

    squareSide = String.toInt(args[0]);

    square = Square.create(squareSide);

    system.out.write <- "side length is `square.getSide()`\n";

    area = square.getArea();

    system.out.write <- square.toString();
    system.out.write <- "\n`area`\n";
};

